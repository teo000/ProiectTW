<script>
    const ctx = document.getElementById('mostRatedBooks').getContext('2d');
    const data = {
        labels: [<%- mostRatedBooks.map(book => `'${book.title}'`).join(',') %>],
        datasets: [{
            label: 'Likes',
            data: [<%- mostRatedBooks.map(book => book.numberofratings).join(',') %>],
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
        }]
    };

    const options = {
        responsive: true,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    };

    new Chart(ctx, {
        type: 'bar',
        data: data,
        options: options
    });
</script>
